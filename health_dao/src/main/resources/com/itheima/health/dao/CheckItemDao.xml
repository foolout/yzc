<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.CheckItemDao">
    <!--查询所有-->
    <select id="findAll" resultType="checkitem">
        select * from t_checkitem
    </select>

    <!--添加检查项-->
    <insert id="add" parameterType="com.itheima.health.dao.CheckItemDao">
        insert into t_checkItem(code,name,sex,age,price,type,remark,attention)
        value
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <!--分页条件查询-->
    <select id="findByCondition" resultType="Checkitem" parameterType="String">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where code like #{value} or name like #{value}
        </if>
    </select>

    <!--检查 检查项是否被检查组使用了-->
    <select id="findByConditionByCheckItemId" parameterType="int" resultType="int">
        select count(1) from t_checkgroup_checkitem where checkitem_id = #{id}
    </select>

    <!--通过id删除-->
    <delete id="deleteById" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>

    <!--通过id查询-->
    <select id="findById" parameterType="int" resultType="checkitem">
        select * from t_checkitem where id=#{id}
    </select>

    <!--更新检查项-->
    <update id="update" parameterType="checkitem">
        update t_checkitem
        set
            code=#{code},
            name=#{name},
            sex=#{sex},
            age=#{age},
            price=#{price},
            type=#{type},
            remark=#{remark},
            attention=#{attention}
        where id=#{id}
    </update>
</mapper>